
@{
    /**/

    ViewBag.Title = "LapBukuBesar";
}
<div>
    <h2>Laporan Buku Besar</h2>
</div>

@using (Html.BeginForm("CetakBukuBesar", "Laporan", FormMethod.Post, new { target = "_blank" }))
{

    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="container">
        <div class="col-md-6">

            <table>
                <tr>
                    <td style="padding:5px">Tanggal</td>
                    <td style="padding:5px"><input type="date" id="Tanggal1" name="Tanggal1" value='@DateTime.Today.ToString("yyyy-MM-dd")' /></td>
                </tr>
                <tr>
                    <td style="padding:5px">Tanggal</td>
                    <td style="padding:5px"><input type="date" id="Tanggal2" name ="Tanggal2" value='@DateTime.Today.ToString("yyyy-MM-dd")' /></td>
                </tr>
            </table>
        </div>

        <div class="col-md-6" style="display:none">
            <table>
                <tr>
                    <td style="padding:5px">Akun</td>
                    <td style="padding:5px"> @Html.DropDownList("GlAkunID1", null, htmlAttributes: new { @class = "form-control" })</td>
                </tr>
                <tr>
                    <td style="padding:5px">Akun</td>
                    <td style="padding:5px"> @Html.DropDownList("GlAkunID2", null, htmlAttributes: new { @class = "form-control" })</td>
                </tr>
            </table>

        </div>
    </div>
    <div class="form-horizontal">
        <input type="Submit" value="Cetak" class="btn-default" />
    </div>

}

