@model IEnumerable<GlobalSoft.Models.AptCategorie>

@{
    ViewBag.Title = "Kategori";
}
<style>
    table, th, td {
        border: 1px solid grey;
        border-collapse: collapse;
        padding: 5px;
    }

        table tr:nth-child(odd) {
            background-color: #f1f1f1;
        }

        table tr:nth-child(even) {
            background-color: #ffffff;
        }
</style>
<h2>Kategori Unit</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        
        <th>
            @Html.DisplayNameFor(model => model.Categorie)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Luas)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AptType.Tipe)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Categorie)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Luas)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AptType.Tipe)
        </td>

        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.CategorieID }) |
            @Html.ActionLink("Details", "Details", new { id = item.CategorieID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.CategorieID })
        </td>
    </tr>
}

</table>
