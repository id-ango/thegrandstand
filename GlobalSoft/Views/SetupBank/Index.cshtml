@model IEnumerable<GlobalSoft.Models.CbBank>

@{
    ViewBag.Title = "Index";
}
<style>
    table, th, td {
        border: 1px solid grey;
        border-collapse: collapse;
        padding: 5px;
    }

        table tr:nth-child(odd) {
            background-color: #f1f1f1;
        }

        table tr:nth-child(even) {
            background-color: #ffffff;
        }
</style>
<h2>Kas/Bank</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.BankName)
        </th>
        <th>
            @Html.DisplayName("Tipe")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GlAccount.GlAkun)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>

        <td>
            @Html.DisplayFor(modelItem => item.BankName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BankAccount)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.GlAccount.GlAkun)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.BankID }) |
            @Html.ActionLink("Details", "Details", new { id = item.BankID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.BankID })
        </td>
    </tr>
}

</table>
