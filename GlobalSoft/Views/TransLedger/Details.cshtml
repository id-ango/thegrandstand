@model GlobalSoft.Models.GlTransH

<br /><br />
<div class="panel panel-default">
    <div class="panel-heading">
        <div class="row">
            
            <h2 style="margin-left:20px">Jurnal</h2>

        </div>
    </div>

    @*Receive All Database Data From Controller And Display Those Data In Client Side*@

 
   @{ 
        
        {
            <div class="panel-body">
                <table class="table table-striped table-responsive">
                    <tbody>
                        <tr>
                            <td>Dokumen : @Model.Docno </td>
                            <td>Tanggal : @Model.Tanggal</td>
                        
                           
                           

                            <td>Keterangan : @Model.Keterangan </td>
                            <td>Saldo : @Model.Saldo </td>

                        </tr>

                        <tr>
                            <td colspan="3">
                                <table class="table table-bordered">
                                    <tbody>
                                        <tr>
                                            <th>Akun</th>
                                            <th>Keterangan</th>
                                            <th>Debet</th>
                                            <th>Kredit</th>
                                        </tr>
                                        @{
                                            var totalBill = 0;
                                            var totalKr = 0;
                                        }
                                        @foreach (var order in Model.GlDetail)
                                        {
                                            
                                            <tr>                                                
                                                <td>@order.GlAccount.GlAkunName</td>
                                                <td>@order.Keterangan</td>
                                                <td>@order.Debet</td>
                                                <td>@order.Kredit</td>
                                            </tr>
                                            totalBill = totalBill + @Convert.ToInt32(order.Debet);
                                            totalKr = totalKr + @Convert.ToInt32(order.Kredit);
                                        }
                                    </tbody>
                                </table>
                                <span class="pull-right" style="margin-right:100px;"><strong>Kredit :  </strong> @totalKr</span>
                                <span class="pull-right" style="margin-right:100px;"><strong>Debet  :  </strong> @totalBill</span>
                            </td>
                        </tr>
    
                    </tbody>
                </table>
            </div>
        }
    }
   
</div>
<p>
    @*Html.ActionLink("Edit", "Edit", new { id = Model. }) *@
    @Html.ActionLink("Back to List", "Index")
</p>
