

@(Html.Kendo().Grid<GlobalSoft.Models.AptUnit>()
                .Name("grid")
                .Columns(columns =>
                {
                    columns.Bound(c => c.UnitNo);
                    columns.Bound(c => c.Lantai);
                    columns.Bound(c => c.AptCategorie.Categorie);
                    columns.Bound(c => c.AptStatus.Status);
                })
                .HtmlAttributes(new { style = "height: 550px;" })
                .Scrollable()
                .Groupable()
                .Sortable()
                .Pageable(pageable => pageable
                    .Refresh(true)
                    .PageSizes(true)
                    .ButtonCount(5))
                .DataSource(dataSource => dataSource
                    .Ajax()
                    .Read(read => read.Action("Customers_Read", "Grid"))
                    .PageSize(20)
                )
)

<style>
    .customer-photo {
        display: inline-block;
        width: 32px;
        height: 32px;
        border-radius: 50%;
        background-size: 32px 35px;
        background-position: center center;
        vertical-align: middle;
        line-height: 32px;
        box-shadow: inset 0 0 1px #999, inset 0 0 10px rgba(0,0,0,.2);
        margin-left: 5px;
    }

    .customer-name {
        display: inline-block;
        vertical-align: middle;
        line-height: 32px;
        padding-left: 3px;
    }
</style>