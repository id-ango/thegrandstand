@model GlobalSoft.Models.CbTransH

<br /><br />
<div class="panel panel-default">
    <div class="panel-heading">
        <div class="row">
            
            <h2 style="margin-left:20px">Kas Bank</h2>

        </div>
    </div>

    @*Receive All Database Data From Controller And Display Those Data In Client Side*@

 
   @{ 
        
        {
            <div class="panel-body">
                <table class="table table-striped table-responsive">
                    <tbody>
                        <tr>
                            <td>Dokumen : @Model.Docno </td>
                            <td>Tanggal : @Model.Tanggal</td>
                        
                           
                            @{
                                if (Model.BankID == 0)
                                {
                                    <td>Bank :  "kosong" </td>
                                }
                                else
                                {
                                    <td>Bank : @ViewBag.Bank  </td>
                                }
                            }

                            <td>Keterangan : @Model.Keterangan </td>
                            <td>Saldo : @Model.Saldo </td>

                        </tr>

                        <tr>
                            <td colspan="3">
                                <table class="table table-bordered">
                                    <tbody>
                                        <tr>
                                            <th>Transaksi</th>
                                            <th>Keterangan</th>
                                            <th>Terima</th>
                                            <th>Bayar</th>
                                        </tr>
                                        @{
                                            decimal totalBill = 0;
                                        }
                                        @foreach (var order in Model.CbTransDs)
                                        {
                                            
                                            <tr>                                                
                                                <td>@order.AptTrsNo.TransNo</td>
                                                <td>@order.Keterangan</td>
                                                <td>@order.Terima</td>
                                                <td>@order.Bayar</td>
                                            </tr>
                                            totalBill = totalBill + (order.Terima-order.Bayar);
                                        }
                                    </tbody>
                                </table>
                                <span class="pull-right" style="margin-right:100px;"><strong>Saldo :  </strong> @totalBill</span>
                            </td>
                        </tr>
    
                    </tbody>
                </table>
            </div>
        }
    }
   
</div>
<p>
    @*Html.ActionLink("Edit", "Edit", new { id = Model. }) *@
    @Html.ActionLink("Back to List", "Index")
</p>
