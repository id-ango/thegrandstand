@model IList<GlobalSoft.Models.AptSPesanan>



<div class="row">
    <div class="col-md-12">
        <div class="panel panel-primary list-panel" id="list-panel">
            <div class="panel-heading list-panel-heading">
                <h1 class="panel-title list-panel-title">Detail Angsuran</h1>
            </div>
            <div class="panel-body">
                 <table id="assets-data-table" class="table table-striped table-bordered" style="width:100%">
               
                    <thead>
                        <tr>
                            <th>Tanggal</th>
                            <th>Keterangan</th>
                            <th>Angsuran</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>

                    <tbody>
                        @{
                            decimal total = 0;
                        }
                        @foreach (var aset in Model)
                        {
                            <tr data-id="@aset.SPesananID">


                                <td class='duedate'>    @Html.TextBoxFor(model => aset.Duedate, "{0:yyyy-MM-dd}", new { @class = "form-control", @type = "date"})</td>
                                <td class="keterangan">  @Html.EditorFor(model => aset.Keterangan, new { htmlAttributes = new { @class = "form-control" } })</td>
                                <td class="jumlah">
                                    @Html.EditorFor(model => aset.Jumlah, new { htmlAttributes = new { @class = "form-control", @type = "number" } })
                                </td>
                                <td hidden>@aset.SPesananID</td>
                                <td> <a data-itemId="0" href="#" class="deleteItem">Remove</a> </td>

                            </tr>
                            total += aset.Jumlah;
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <td><a id="addToList" class="btn btn-primary" onclick="addList()">Add To List</a></td>

                            <td style="font-size:larger" align="right"><strong>TOTAL ANGSURAN</strong></td>

                            <td id="totjumlah" style="font-size:larger"><strong>@string.Format("{0:n0}", @total)</strong></td>

                        </tr>
                    </tfoot>
                </table>

            </div>
        </div>
    </div>
</div>

