@model IEnumerable<GlobalSoft.Models.AptTrans>

@{
    ViewBag.Title = "Surat Pesanan";
}

<h2>Surat Pesanan</h2>

<p>

    @Html.ActionLink("Create New", "Create")



</p>
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-primary list-panel" id="list-panel">
            <div class="panel-heading list-panel-heading">
                <h1 class="panel-title list-panel-title">Surat Pesanan</h1>
            </div>
            <div class="panel-body">
                <table id="assets-data-table" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th>No. Bukti</th>
                            <th>Tanggal</th>
                            <th>Unit</th>
                            <th>Customer</th>
                            <th>Keterangan</th>
                            <th>Piutang</th>
                            <th>Marketing</th>
                            <th>Cara Pembayaran</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var asset in Model)
                        {
                            <tr>
                                <td>@asset.NoRef</td>
                                <td>@asset.Tanggal</td>
                                <td>@asset.AptUnit.UnitNo</td>
                                <td>@asset.ArCustomer.CustomerName</td>
                                <td>@asset.Keterangan</td>
                                <td>@asset.Piutang</td>
                                <td>@asset.AptMarketing.MarketingName</td>
                                <td>@asset.AptBayar.CaraBayar</td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = asset.TransID }) |
                                    @Html.ActionLink("Details", "Details", new { id = asset.TransID }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = asset.TransID }) |
                                    @Html.ActionLink("Proses SP", "sPesanan", new { id = asset.TransID }, new { target = "_blank",@class="dialog"}) |
                                    @Html.ActionLink("Edit Angsuran", "Proses", new { id = asset.TransID }, new { target = "_blank", @class = "dialog" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts
{

    <script type="text/javascript">


        $(document).ready(function () {

            $('#assets-data-table').DataTable();
        });
    </script>
    <script>
        $(function () {
            $("#dialog").dialog();
        });
    </script>
}



