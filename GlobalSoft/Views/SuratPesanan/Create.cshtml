    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script>
        $(function () {
            $("#anggal").datepicker({
                dateFormat: 'yyyy-MM-dd',
                changeMonth: true,
                changeYear: true,
                yearRange: '1900:' + (new Date().getFullYear() + 60)
            });
        });
    </script>

    <script>
        $('#UnitID').change(function (e) {
            var row_num = $("#UnitID option:selected").val();
            // alert("Nama Customer : " + row_num);

            $.ajax({
                type: "GET",
                url: "/SuratPesanan/CekCustomer",
                data: {
                    Custid: 0,
                    Unitid: row_num
                },
                success: function (data) {
                    var test = JSON.stringify(data);

                    $("#CustomerID").val(data.PersonID);
                    $("#MarketingID").val(data.MarketingID);
                    $("#Booking1").val(data.Piutang);
                    $("#Booking2").val(data.Piutang);
                },
                error: function () {
                    alert("Something went wrong in controller");
                }
            });
        });


    </script>
    <script>


        function changeInhouse2() {
            var row_num = $("#UnitID option:selected").val();
            var row_cust = $("#CustomerID option:selected").val();
            var row_harga = $("#harga1").val();
            var row_cicil = $("#cicilan1").val();
            var data1 = {
                Custid: row_cust,
                Unitid: row_num,
                harga: row_harga,
                cicil: row_cicil
            };

            $.ajax({
                type: "GET",
                url: "/SuratPesanan/CekBook",
                data: data1,
                success: function (result) {
                    $("#angsuran1").val(result.Payment);
                    $("#Piutang1").val(result.Harga);
                    $("#Booking1").val(result.Piutang);

                },
                error: function (result) {
                    alert("Something went wrong in controller");
                }
            });
        };

        function changeKPA() {
            var row_num = $("#harga2").val();
            var row_cicil = $("#cicilan2").val();
            var row_booking = $("#Booking2").val();

            var persen = $("#persen2").val();

            var testing = (row_num) * persen / 100;
            var uangmuka = row_num - testing;
            var piutang = uangmuka - row_booking;
            var angsuran = piutang / row_cicil;

            $("#sisakpa").val(testing);
            $("#UangMuka").val(uangmuka);
            $("#Piutang2").val(piutang);
            $("#angsuran2").val(angsuran);


        }

        function changeInhouse() {

            var row_bonus = $("#Booking1").val();
            var row_harga = $("#harga1").val();
            var row_cicil = $("#cicilan1").val();
            var row_piutang = row_harga - row_bonus;

            var testing = row_piutang / row_cicil;

            $("#angsuran1").val(testing);
            $("#Piutang1").val(row_piutang);

        };

        //   $("#cicilan1").change(function () { changeTotal() });
        $("#cicilan1").change(function () { changeInhouse() });
        $("#harga1").change("onkeydown", function () { changeInhouse() });
        $("#persen2").change(function () { changeKPA() });
        $("#Booking2").change(function () { changeKPA() });
        $("#cicilan2").change(function () { changeKPA() });
    </script>

