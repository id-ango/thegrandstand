<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/datatables")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" style="margin-right: 5px;">Dashboard<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Unit", "DsbUnit", "Dashboard")</li>
                            <li>@Html.ActionLink("List Unit", "List3Unit", "Dashboard")</li>

                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" style="margin-right: 5px;">Administrasi<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Booking Fee", "index", "BookingFee")</li>
                            <li>@Html.ActionLink("Surat Pesanan", "index", "SuratPesanan")</li>
                            <li>@Html.ActionLink("Bayar Angsuran", "index", "BayarAngsuran")</li>
                            <li class="divider"></li>
                            <li>@Html.ActionLink("Customer", "index", "SetupCustomer")</li>
                            <li>@Html.ActionLink("Cara Pembelian", "index", "SetupBayar")</li>
                            <li>@Html.ActionLink("Pembayaran", "index", "SetupPayment")</li>
                            <li>@Html.ActionLink("Syarat SKUP", "SKUP", "~/home", new { target = "_blank" })</li>

                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" style="margin-right: 5px;">KasBank<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Setup Bank", "index", "SetupBank")</li>
                            <li>@Html.ActionLink("Transaksi", "index", "TransBank")</li>


                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" style="margin-right: 5px;">Ledger<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Setup Akun", "index", "SetupGlAccounts")</li>
                            <li>@Html.ActionLink("Setup Tipe Akun", "index", "SetupGlTipes")</li>
                        </ul>
                    </li>

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" style="margin-right: 5px;">Setup<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Tipe Ruangan", "Index", "SetupType")</li>
                            <li>@Html.ActionLink("Kategori Unit", "index", "SetupCategorie")</li>
                            <li>@Html.ActionLink("Status Unit", "index", "SetupStatus")</li>
                            <li>@Html.ActionLink("Unit", "Index", "SetupUnit")</li>
                            <li>@Html.ActionLink("Agen", "index", "SetupAgen")</li>
                            <li>@Html.ActionLink("Marketing", "index", "SetupMarketing")</li>
                            <li>@Html.ActionLink("Jenis Transaksi", "index", "SetupTrsNo")</li>
                            @*    <li><a href="#">Reservasi</a></li> *@
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - GrandStand Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/datatables")

    @RenderSection("scripts", required: false)
</body>
</html>
